{% extends 'base.html.twig' %}

{% block title %}JobOffer{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Offre d'emploi</h1>
            </div>
        </div>
    </div>

<div class="m-5">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job_offer.id }}</td>
            </tr>
            <tr>
                <th>Nom du poste</th>
                <td>{{ job_offer.jobTitle }}</td>
            </tr>
            <tr>
                <th>Localisation du poste</th>
                <td>{{ job_offer.workplace }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job_offer.description }}</td>
            </tr>
            <tr>
                <th>IsValid</th>
                <td>{{ job_offer.isValid ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Salaire</th>
                <td>{{ job_offer.salary }}</td>
            </tr>
            <tr>
                <th>Nombre d'heures/semaine</th>
                <td>{{ job_offer.schedule }}</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="ms-5">
    <a href="{{ path('app_job_offer_index') }}" class="btn btn-outline-success mb-2">Retour Ã  la liste</a>
    <br>
    <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}" class="btn btn-outline-primary">>Modifier</a>

    {{ include('job_offer/_delete_form.html.twig') }}
{% endblock %}
