{% extends 'base.html.twig' %}

{% block title %}JobOffer index{% endblock %}

{% block body %}
    {{ include('_navbar.html.twig') }}

    {# Alert message after joboffer creation #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success text-center mt-5">
            {{ message }}
        </div>
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mb-5 mt-2">Liste des offres d'emploi</h1>
            </div>
        </div>
    </div>
    <div class="m-5">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nom de l'offre</th>
                    <th>Localisation de l'emploi</th>
                    <th>Description</th>
                    {# <th>IsValid</th> #}
                    <th>Salaire</th>
                    <th>Nombre d'heures/semaine</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for job_offer in job_offers %}
                <tr>
                    <td>{{ job_offer.id }}</td>
                    <td>{{ job_offer.jobTitle | capitalize}}</td>
                    <td>{{ job_offer.workplace | capitalize}}</td>
                    <td>{{ job_offer.description | capitalize}}</td>
                    {# <td>{{ job_offer.isValid ? 'Yes' : 'No' }}</td> #}
                    <td>{{ job_offer.salary }}</td>
                    <td>{{ job_offer.schedule }}</td>
                    <td>
                        <a href="{{ path('app_job_offer_show', {'id': job_offer.id}) }}">Voir</a>
                        <a href="{{ path('app_job_offer_edit', {'id': job_offer.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucune offre enregistrée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="m-5">
        <a href="{{ path('app_job_offer_new') }}" class="btn btn-outline-primary">Créer une nouvelle offre d'emploi</a>
    </div>
{% endblock %}
