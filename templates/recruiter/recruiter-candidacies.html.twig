{% extends 'base.html.twig' %}

{% block title %}Recruteur{% endblock %}

{% block body %}
{{ include('_navbar.html.twig') }}

<div class="container">
    <h1 class="text-center mt-5">{{ app.user.firstname}}, les candidatures</h1>

    <button class="btn btn-outline-primary">
        <a href="{{ path('app_recruiter') }}" title="Retour au menu recruteur"><i class="fa-solid fa-chevron-left"></i></a>
    </button>


    {% for candidacy in candidacies %}
        <section class="mt-5">
            {% if candidacy.isValid %}
            <p>
                <span class="fw-bold">{{ candidacy.candidate.firstname | capitalize }} {{ candidacy.candidate.lastname | capitalize }}</span>, {{ candidacy.candidate.job }}, 
                a postulé à l'annonce <span class="fw-bold">{{ candidacy.JobOffer.id }} - {{ candidacy.JobOffer.jobtitle | capitalize }}</span>.
            </p>
            <p> <span class="fw-bold">Description:</span> {{ candidacy.jobOffer.description | capitalize}}</p>
            <hr>
            {% endif %}
        </section>
    {% endfor %}
</div>
{% endblock %}
