{% extends 'base.html.twig' %}

{% block title %}Consultant | Validation{% endblock %}

{% block body %}
{{ include('_navbar.html.twig') }}

<div class="container">
    <h1 class="text-center mt-5">Mon espace consultant</h1>
    
    <button class="btn btn-outline-primary">
        <a href="{{ path('app_consultant_workingpage')}}" title="Accueil espace Consultant">
            <i class="fa-solid fa-angle-left"></i>
        </a>
    </button>
    <section class="mt-5">
        <h2>Liste des comptes recruteur à valider</h2>
        <div class="my-3 mx-5">	
            Id : {{ Id }}
            <br>
            Nom : {{ Nom }}
            <br>
            Prénom : {{ Prénom }}
            <br>
            Email : {{ Email }}
            <br>
            {% if Status == false %}
                Status : <span class="invalidMsg">A valider</span>
            {% else %}
                Status : <span class="validMsg">Validé</span>
            {% endif %}
            <br>

            <button class="btn btn-outline-primary mt-2">
                <a href="{{ path('app_consultant_workingpage_validation_recruiter', {'id': Id }) }}">Valider le compte</a>
            </button>
        </div>
    </section>
</div>
{% endblock %}
